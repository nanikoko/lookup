@charset "UTF-8";

.typing > h1 {
  font-size: 30px;
  min-width:11px;
  white-space: nowrap;
  margin: 0;
  position: fixed;
  color: transparent;
  top:20%;
  left:50%;
  transform: translate(-50%, -50%);
}

.typing > h1::before {
  content: "달과 우주를 관측하고 오늘의 천문현상정보를 제공합니다";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: white;
  overflow: hidden;
  animation: typing 5s steps(31) infinite;
}

@keyframes typing{
  0% {
    width: 0%;
  }
  50% {
    width: 100%;
  }
  100% {
    width: 100%;
  }
}